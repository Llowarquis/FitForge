@using Microsoft.AspNetCore.Identity
@using FitForge.Data

@inject SignInManager<ApplicationUser> SignInManager

<ul class="nav nav-pills flex-column">
    <li class="nav-item">
        <NavLink class="nav-link" href="Account/Manage" Match="NavLinkMatch.All">Perfil</NavLink>
    </li>
    @* <li class="nav-item">
        <NavLink class="nav-link" href="Account/Manage/Email">Email</NavLink>
    </li> *@
    <li class="nav-item">
        <NavLink class="nav-link" href="Account/Manage/ChangePassword">Contraseña</NavLink>
    </li>
    @if (hasExternalLogins)
    {
        <li class="nav-item">
            <NavLink class="nav-link" href="Account/Manage/ExternalLogins">Logins externos</NavLink>
        </li>
    }
    @* <li class="nav-item">
        <NavLink class="nav-link" href="Account/Manage/TwoFactorAuthentication">Verificaci&oacute;n en 2 pasos</NavLink>
    </li> *@
    <li class="nav-item">
        <NavLink class="nav-link" href="Account/Manage/PersonalData">Datos personales</NavLink>
    </li>
</ul>

@code {
    private bool hasExternalLogins;

    protected override async Task OnInitializedAsync()
    {
        hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    }
}
